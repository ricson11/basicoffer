{{>_header2}}
{{>_msg}}

  <div class="main-wrapper">
      <div class="container my-5 ">
      <h5 class=" text-center">Add New Post</h5>
      <form action="/post" method="POST">
       <div class="form-group">
           <label id="postLabel">Post Title</label>
           <input type="text" name="title" class="form-control" placeholder="Your post title here" required="required">
       </div><br>
       <div class="custom-control custom-switch">
           <input type="checkbox" name="allowComment" class="custom-control-input" id="switch1" checked="checked"> 
           <label id="postLabel" class="custom-control-label" for="switch1">Comment is on</label>
       </div><br>
         <div class="form-group">
             <label id="postLabel">Post Body</label>
             <textarea name="detail" class="form-control" placeholder="Your post body here..." rows="10"></textarea>
         </div>
         <div class="form-group">
             <button class="btn btn-success" type="submit" id="subPost">Submit Post</button>
         </div>
      </form>
  </div>
  {{>_footer2}}
</div>
  
